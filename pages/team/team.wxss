/* pages/team/team.wxss */
.card{
  display: flex;
  flex-direction: column;
  border:1px solid #ddd;
  background-color: #eee;
  border-radius: 10px;
  padding: 20rpx;
  margin:20rpx 20rpx;
}
.card-title{
  font-size:18px;
  margin:20rpx 0;
}
.card image{
  width:100%;
  height:480rpx;
}
.card-name{
  font-size: 16px;
}
.card-teach,
.card-major,
.card-recommend{
  font-size:14px;
  margin:5rpx 0;
}
