/* pages/product/product.wxss */
.search{
  height:50rpx;
  display: flex;
  border: 1px solid #bbb;
  margin:20rpx;
  border-radius: 5px;
}
.search image{
  height:100%;
  width:50rpx;
}
.search input{
  width:100%;
}
.pcard{
  display: flex;
  flex-wrap: wrap;
  padding:20rpx;
  background:#eee;
  justify-content: space-between;
}
.pcard .card{
  display: flex;
  flex-direction: column;
  width:49%;
  margin:10rpx 0;
  background:#fff
}
.pcard .card image{
  width:100%;
  height:350rpx;
}
.pname,.price{
  font-size:14px;
  display: block;
  border:1px solid #eee;
  padding: 10rpx;
}
.price{
  color:red;
}